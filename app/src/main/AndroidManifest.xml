<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gymtimer"
    xmlns:tools="http://schemas.android.com/tools">
    <application
        tools:replace="android:icon, android:label"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gymtimer">

        <activity
            android:name=".ui.main.AddWorkoutActivity"
            android:theme="@style/Theme.Gymtimer.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".ui.main.TimerActivity"
            android:theme="@style/Theme.Gymtimer.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".ui.main.EditWorkoutActivity"
            android:theme="@style/Theme.Gymtimer.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".ui.main.ViewWorkoutActivity"
            android:theme="@style/Theme.Gymtimer.NoActionBar"
            android:exported="true" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gymtimer.NoActionBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


</application>
    <uses-permission
        android:name="android.permission.INTERNET"
        tools:node="remove"/>
</manifest>
